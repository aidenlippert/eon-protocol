{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "./contracts/**/*.ts",
    "./test/**/*.ts",
    "./scripts/**/*.ts",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules", "dist", "cache", "artifacts"]
}
