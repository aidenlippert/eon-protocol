# Eon Protocol - Environment Variables
# Copy this file to .env.local and fill in your values

# ======================
# Supabase Configuration
# ======================
# Get these from: https://app.supabase.com/project/_/settings/api

# Public URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Anonymous Key (safe to expose to client - row level security protects data)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service Role Key (NEVER expose to client! Server-side only)
# This key has full database access - keep it secret!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ======================
# Blockchain Configuration
# ======================

# Alchemy API Key for RPC calls
# Get from: https://dashboard.alchemy.com/
NEXT_PUBLIC_ALCHEMY_API_KEY=your-alchemy-key-here

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-id-here

# ============ Network RPCs ============
ARBITRUM_SEPOLIA_RPC=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# ============ Private Keys ============
# WARNING: Never commit real private keys! Use .env (gitignored)
PRIVATE_KEY=your_deployer_private_key_here

# ============ Block Explorers ============
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# ======================
# Didit KYC Configuration
# ======================

# Didit API Key
# Get from: https://verification.didit.me/
DIDIT_API_KEY=your-didit-key-here

# ======================
# Smart Contract Addresses
# ======================

# Arbitrum Sepolia Testnet (will be populated after deployment)
NEXT_PUBLIC_CREDIT_REGISTRY_ADDRESS=
NEXT_PUBLIC_LENDING_POOL_ADDRESS=
NEXT_PUBLIC_INSURANCE_FUND_ADDRESS=
NEXT_PUBLIC_LIQUIDATOR_ADDRESS=

# Arbitrum Mainnet (for production)
# NEXT_PUBLIC_CREDIT_REGISTRY_ADDRESS_MAINNET=
# NEXT_PUBLIC_LENDING_POOL_ADDRESS_MAINNET=

# ============ Protocol Configuration ============
TREASURY_ADDRESS=0x_your_treasury_address_here
ATTESTER_ADDRESS=0x_your_backend_attester_address_here

# ============ Chainlink Price Feeds (Arbitrum Sepolia) ============
# Get latest feeds from: https://docs.chain.link/data-feeds/price-feeds/addresses?network=arbitrum
WETH_PRICE_FEED=0xd30e2101a97dcbAeBCBC04F14C3f624E67A35165
WBTC_PRICE_FEED=0x0c9973e7a27d00e656B9f153348dA46CaD70d03d
USDC_PRICE_FEED=0x0153002d20B96532C639313c2d54c3dA09109309

# ======================
# Chainlink Configuration
# ======================

# Chainlink Functions Subscription ID
CHAINLINK_SUBSCRIPTION_ID=

# Chainlink DON ID for Arbitrum
CHAINLINK_DON_ID=fun-arbitrum-sepolia-1

# ============ Asset Addresses (Arbitrum Sepolia) ============
# You may need to deploy your own test tokens or use existing ones
USDC_ADDRESS=0x75faf114eafb1BDbe2F0316DF893fd58CE46AA4d
WETH_ADDRESS=0x980B62Da83eFf3D4576C647993b0c1D7faf17c73
WBTC_ADDRESS=0x0000000000000000000000000000000000000000

# ============ Backend API Configuration ============
BACKEND_URL=http://localhost:3000
ARBISCAN_API_KEY_BACKEND=your_arbiscan_api_key_for_backend
ALCHEMY_API_KEY=your_alchemy_api_key_here

# ============ Database (Backend Scoring Service) ============
DATABASE_URL=postgresql://user:password@localhost:5432/eon_protocol
REDIS_URL=redis://localhost:6379

# ======================
# Application Configuration
# ======================

# Environment (development, staging, production)
NODE_ENV=development

# Next.js URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ======================
# Optional: Feature Flags
# ======================

# Enable/disable features
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_MAINNET=false
NEXT_PUBLIC_ENABLE_POINTS_SYSTEM=true
NEXT_PUBLIC_ENABLE_CHAINLINK_ORACLE=false

# ======================
# Rate Limiting
# ======================

# API rate limits
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=5   # Max requests per window

# ============ Monitoring ============
SENTRY_DSN=your_sentry_dsn_here
DISCORD_WEBHOOK_URL=your_discord_webhook_for_alerts

# ⚠️ SECURITY WARNINGS:
# 1. NEVER commit .env.local file to git (already in .gitignore)
# 2. NEVER use mainnet private keys on testnet
# 3. NEVER share your private keys or API keys with anyone
# 4. Use a dedicated testnet wallet with only testnet ETH
# 5. Keep SUPABASE_SERVICE_ROLE_KEY secret - never expose to client
